	head
		meta(charset="utf-8")
		title Главная
		include inc/head.pug
		include inc/css.pug
	body.main.loading
		//- include inc/header.pug
		.loader
		header.head
			.head__wrapper
				.head__back
					a.back-btn(href="#") Вернуться на сайт
				.head__btn
					a.test-btn(href="#") Тест-драйв
		main#content
			
			setion.first-screen__cont
				figure.first-screen__bg
					img(src="img/top-bg.jpg")
				.wrapper
					.first-screen
						//- .first-screen__logos
							.logos
								a.logos__logo(href="#")
									img(src="img/geo-logo.svg")
								a.logos__logo(href="#")
									img(src="img/porshe-logo.svg")
						.first-screen__text 
							i
								i G
								i e
								i o
								i P
								i r
								i o 
							span 
								i 
									i /
							i
